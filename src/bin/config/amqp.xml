<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="statflo.amqp.connection" class="PhpAmqpLib\Connection\AMQPStreamConnection" lazy="true">
            <argument>%statflo.amqp_host%</argument>
            <argument>%statflo.amqp_port%</argument>
            <argument>%statflo.amqp_user%</argument>
            <argument>%statflo.amqp_password%</argument>
        </service>
    </services>
</container>
