<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="statflo.amqp.eventLoop" class="React\EventLoop\LoopInterface" lazy="true">
            <factory class="React\EventLoop\Factory" method="create" />
        </service>
        <service id="statflo.amqp.asyncConnection" class="Statflo\Event\AsyncClient" lazy="true">
            <argument type="service" id="statflo.amqp.eventLoop" />
            <argument type="collection">
                <argument key="host">%statflo.amqp_host%</argument>
                <argument key="port">%statflo.amqp_port%</argument>
                <argument key="user">%statflo.amqp_user%</argument>
                <argument key="password">%statflo.amqp_password%</argument>
            </argument>
        </service>
        <service id="statflo.amqp.connection" class="Statflo\Event\Client" lazy="true">
            <argument type="collection">
                <argument key="host">%statflo.amqp_host%</argument>
                <argument key="port">%statflo.amqp_port%</argument>
                <argument key="user">%statflo.amqp_user%</argument>
                <argument key="password">%statflo.amqp_password%</argument>
            </argument>
        </service>
    </services>
</container>
